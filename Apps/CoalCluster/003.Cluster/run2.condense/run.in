include "system.in.init"
boundary p p p
read_data "start.data" # start.data is final.data in run1
include "system.in.settings"

thermo_style custom step temp pe ke press lx density


reset_timestep 0
timestep 1

# dump every 1 ps
dump d1 all custom 1000 system.lammpstrj id mol type x y z vx vy vz ix iy iz

variable T equal 1000
variable S equal 100000

variable P equal 1
fix  f0 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  0.data
unfix f0

variable P equal 10
fix  f1 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  1.data
unfix f1

variable P equal 100
fix  f2 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  2.data
unfix f2

variable P equal 1000
fix  f3 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  3.data
unfix f3

variable P equal 10000
fix  f4 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  4.data
unfix f4

variable P equal 100000
fix  f5 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  5.data
unfix f5

variable P equal 1000000
fix  f6 all npt temp $T $T 100 iso $P $P 1000.0
run         $S
write_data  6.data
unfix f6

