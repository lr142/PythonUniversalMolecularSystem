include "system.in.init"
read_data "system.data"
include "system.in.settings"

thermo_style custom step temp pe ke press lx ly lz density
thermo 100

reset_timestep 0
timestep 1

# dump every 1 ps
dump d1 all custom 1000 system.lammpstrj id mol type x y z vx vy vz ix iy iz

variable T equal 300
variable S equal 10000

velocity all create $T 213456
fix  f0 all nvt temp $T $T 100
run         $S
write_data  final.data
unfix f0
